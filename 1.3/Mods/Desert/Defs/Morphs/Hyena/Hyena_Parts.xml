<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name="HyenaPart" ParentName="PawnmorphPart" Abstract="true">
		<classInfluence>HyenaMorph</classInfluence>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="HyenaPart">
		<defName>EtherHyenaMuzzle</defName>
		<label>hyena muzzle</label>
		<description>A snout graces [PAWN_nameDef]'s face, like that of a hyena.</description>
		<mutationTale>GrewCanidMuzzle</mutationTale>
		<parts>
			<li>Jaw</li>
		</parts>
		<graphics>
			<Muzzle>Parts/Hyena/Hyena_Muzzle</Muzzle>
		</graphics>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
				<graphics>
					<Muzzle>Parts/None/None</Muzzle>
				</graphics>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.40</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
				<graphics>
					<Muzzle>Parts/Partials/PartialMuzzle/TinyMuzzle</Muzzle>
				</graphics>
				<minSeverity>0.1</minSeverity>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.40</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
				<graphics>
					<Muzzle>Parts/Partials/PartialMuzzle/PartialMuzzle</Muzzle>
				</graphics>
				<minSeverity>0.3</minSeverity>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.50</offset>
					</li>
				</capMods>
				<graphics>
					<Muzzle>Parts/Hyena/Hyena_Muzzle</Muzzle>
				</graphics>
				<minSeverity>0.5</minSeverity>
			</li>
			<li>
				<label>adapted</label>
				<minSeverity>1</minSeverity>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.10</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.50</offset>
					</li>
				</capMods>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<minSeverity>1.5</minSeverity>
				<label>paragon</label>
				<capMods>
					<li>
						<capacity>Eating</capacity>
						<offset>0.50</offset>
					</li>
				</capMods>
				<aspectGivers>
					<li Class="Pawnmorph.Aspects.RandomGiver">
						<entries>
							<li>
								<aspect>MeatLover</aspect>
								<chance>1</chance>
							</li>
						</entries>
					</li>
				</aspectGivers>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>10.0</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
		<categories>
			<li>Major</li>
		</categories>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="HyenaPart">
		<defName>EtherHyenaEar</defName>
		<label>hyenalike</label>
		<description>[PAWN_nameDef]'s ears have grown into furred, rounded, hyena ears.</description>
		<parts>
			<li>Ear</li>
		</parts>
		<graphics>
			<LeftEar>Parts/Hyena/Hyena_Ear_Left</LeftEar>
			<LeftEarBehind>Parts/Hyena/Hyena_Ear_Left_Behind</LeftEarBehind>
			<RightEar>Parts/Hyena/Hyena_Ear_Right</RightEar>
			<RightEarBehindHead>Parts/Hyena/Hyena_Ear_Right_Behind</RightEarBehindHead>
		</graphics>
		<mutationTale>EarsChangedCanid</mutationTale>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<partEfficiencyOffset>0.25</partEfficiencyOffset>
			</li>
		</stages>	
		<categories>
			<li>Major</li>
		</categories>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="HyenaPart">
		<defName>EtherHyenaTail</defName>
		<label>tufted tail</label>
		<description>A thin tail with a tuft of fur at the end.</description>
		<parts>
			<li>Tail</li>
			<li>MorphTail</li>
		</parts>
		<mutationTale>GrewTail</mutationTale>
		<graphics>
			<Tail>Parts/Hyena/Hyena_Tail</Tail>
		</graphics>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.01</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<categories>
			<li>Major</li>
		</categories>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
